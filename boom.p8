function make_player()
 return {
		x=1,
		y=1,
		update=function(self)
			if btnp(⬅️) then
				self.x-=1
			elseif btnp(➡️) then
				self.x+=1
			elseif btnp(⬆️) then
				self.y-=1
			elseif btnp(⬇️) then
				self.y+=1
			end
		end,
		draw=function(self)
			palt(0, false)
			palt(4, true)
			spr(96,self.x*8,self.y*8)
			pal()
		end
	}
end
